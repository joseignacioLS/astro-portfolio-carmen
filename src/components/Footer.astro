---
import { rrssData } from "../data/rrss";
const dateYear = new Date().getUTCFullYear();
---

<footer style="view-transition-name: footer">
  <ul class="rrss">
    {
      rrssData.map((item) => {
        return (
          <li>
            <a href={item.url} target="_blank">
              <img src={item.logo} />
              <span>{item.title}</span>
            </a>
          </li>
        );
      })
    }
  </ul>
  <p class="footer__disclaimer">
    Â© {dateYear} CarmenBonita Todos los derechos reservados.
  </p>
</footer>

<style>
  footer {
    padding: 1rem;
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    text-align: center;
  }

  .rrss {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;

    list-style: none;
  }

  .rrss li {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
  }

  .rrss img {
    width: 1rem;
  }

  .footer__disclaimer {
    font-size: 0.75rem;
    color: grey;
  }

  @media (max-width: 900px) {
    .rrss {
      gap: 2rem;
    }
    .rrss > li > a > span {
      display: none;
    }
    .rrss img {
      width: 2rem;
    }
    .footer__disclaimer {
      font-size: 1rem;
      color: grey;
    }
  }
</style>
