---
import { work } from "../data/work";
const { labels } = Astro.props;
---

<div class="gallery">
  {
    work
      .filter((w) => w.labels.some((l) => !labels || labels.includes(l)))
      .map((w) => {
        return (
          <a
            href={`/detail/${w.id}`}
            data-title={w.title}
            class="gallery__item"
          >
            <article>
              <img
                style={`view-transition-name: item-image-${w.id}`}
                src={w.mini}
              />
            </article>
          </a>
        );
      })
  }
</div>

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    column-gap: 1rem;
    row-gap: 1rem;
  }

  .gallery__item {
    position: relative;
    aspect-ratio: 1 / 1;
  }

  .gallery__item::after {
    content: attr(data-title);

    width: 100%;
    height: 5rem;

    position: absolute;
    left: 0;
    top: 0;

    padding: 1.5rem;

    transition: 0.3s ease;
    opacity: 0;

    display: flex;

    color: black;
    font-size: 1.5rem;
    font-weight: bold;
    background: linear-gradient(to bottom, white, transparent);
    object-fit: border-box;
  }

  .gallery__item:hover::after {
    opacity: 1;
  }

  .gallery__item img {
    width: 100%;
    object-fit: contain;
  }

  @media (max-width: 900px) {
    .gallery {
      grid-template-columns: 1fr;
    }
  }
</style>
